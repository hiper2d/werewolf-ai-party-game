# Authentication (NextAuth)
AUTH_SECRET=
NEXTAUTH_SECRET=

# GitHub OAuth (optional - for GitHub login)
GITHUB_ID=
GITHUB_SECRET=

# Google OAuth (optional - for Google login)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Firebase Service Account (required)
# Download from Firebase Console > Project Settings > Service Accounts > Generate new private key
FIREBASE_PROJECT_ID=
FIREBASE_CLIENT_EMAIL=
FIREBASE_PRIVATE_KEY=""

# Better Stack Logging (optional - for structured logging to BetterStack)
# BETTER_STACK_SOURCE_TOKEN=
# BETTER_STACK_INGESTING_URL=

# Logging Configuration (optional - all have sensible defaults)
# LOG_LEVEL=info                    # debug | info | warn | error
# LOG_MAX_HISTORY_CHARS=1000        # Max chars per history message (-1 = no limit)
# LOG_MAX_REPLY_CHARS=5000          # Max chars for reply body (-1 = no limit)
# LOG_MAX_THINKING_CHARS=2000       # Max chars for thinking/reasoning (-1 = no limit)
# LOG_SYSTEM_PROMPT=true            # Whether to log system prompts
# LOG_HISTORY=true                  # Whether to log message history
# LOG_REPLY_MODE=body-only          # raw | body-only
# LOG_INCLUDE_REASONING=true        # Whether to log thinking content
# LOG_INCLUDE_USAGE=true            # Whether to log token usage

# Emulator settings (optional - for local development with Firebase emulator)
# NEXT_PUBLIC_APP_ENV=emulator
# NEXT_PUBLIC_EMULATOR_FIRESTORE_URL=localhost:8080
# NEXT_PUBLIC_EMULATOR_FIREBASE_AUTH_URL=localhost:9099
